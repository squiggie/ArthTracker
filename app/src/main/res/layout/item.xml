<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            app:elevation="8dp"
            app:borderWidth="0dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_edit_white"
            android:layout_margin="8dp"
            android:layout_alignParentTop="true">
        </android.support.design.widget.FloatingActionButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="July 16 2015"
            android:layout_toRightOf="@+id/fab"
            android:layout_alignTop="@+id/fab"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:padding="2dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overall"
            android:text="Overall Score: 4"
            android:layout_toRightOf="@+id/fab"
            android:layout_below="@id/date"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:padding="2dp" />
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/overall"
            android:layout_alignLeft="@+id/overall"
            android:padding="4dp"
            android:layout_margin="8dp">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/finger"
                    android:id="@+id/fingerCircle"
                    android:background="@drawable/circle"
                    android:layout_gravity="center"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/finger"
                    android:text="Fingers"
                    android:layout_toRightOf="@+id/fingerCircle"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="8dp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbs"
                    android:text="Thumbs"
                    android:layout_toRightOf="@+id/fingerCircle"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/wrists"
                    android:id="@+id/wristCircle"
                    android:background="@drawable/circle"
                    android:layout_gravity="center"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wrists"
                    android:text="Wrists"
                    android:layout_toRightOf="@+id/fingerCircle"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="8dp" />
                <View
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@+id/elbows"
                    android:id="@+id/elbowCircle"
                    android:background="@drawable/circle"
                    android:layout_gravity="center"
                    android:padding="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/elbows"
                    android:text="Elbows"
                    android:layout_toRightOf="@+id/fingerCircle"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </TableRow>
        </TableLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#cccccc"
            android:layout_below="@+id/tableLayout"
            android:id="@+id/line1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notes"
            android:text="Notes: Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:layout_below="@+id/tableLayout"
            android:layout_alignLeft="@+id/fab"
            android:padding="2dp"
            style="@style/Base.TextAppearance.AppCompat.Small" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
