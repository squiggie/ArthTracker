<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="6dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/circle"
            android:background="@drawable/green_circle"
            android:layout_gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="July 17, 2015"
            android:id="@+id/date"
            android:layout_alignTop="@+id/circle"
            android:layout_toRightOf="@+id/circle"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:id="@+id/score"
            android:layout_alignLeft="@+id/circle"
            android:layout_alignTop="@+id/circle"
            android:layout_alignRight="@+id/circle"
            android:layout_alignBottom="@+id/circle"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:gravity="center"
            android:textColor="@android:color/primary_text_dark"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Notes: Good Day. Started new medicine."
            android:id="@+id/notes"
            android:layout_below="@+id/date"
            android:layout_toRightOf="@+id/circle"
            android:layout_alignLeft="@+id/date"
            android:textStyle="italic"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
