<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:text="Pain Label:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txtPainScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtPainTitle"
        android:layout_alignTop="@+id/txtPainTitle"
        android:layout_toEndOf="@+id/txtPainTitle"
        android:layout_toRightOf="@+id/txtPainTitle"
        android:padding="8dp"
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/painSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtPainTitle"
        android:max="5"
        android:padding="8dp"
        android:progress="3"
        android:progressTint="@color/primaryColorDark"
        android:thumbTint="@color/primaryColor" />

</RelativeLayout>